.mainContainer
	fixed top 0 left 0
	height 160px
	z-index 999
	width 100%
	&.pined
		fixed top 0 left 0
	&:before
		content ''
		background #fff
		width 100%
		height 35px
		absolute top 0 left 0
	&:after
		content ''
		background url('../image/curva-top.png') center 30px no-repeat
		background-size cover
		height 100%
		width 100%
		absolute left 0 bottom 36px
		@media screen and (min-width:480px)
			bottom 39px
		@media screen and (min-width:992px)
			bottom 0
		@media screen and (min-width:992px)
			bottom -3px
	.container
		relative top 0 left 0
		box-sizing border-box
		display flex
		flex-direction row
		padding-right 10px
		flex-wrap nowrap
		justify-content flex-end
		align-items flex-start
		height 100%
		z-index 7
		&:after
			content ''
			background url('../image/semi-circulo.png') 0 0 no-repeat
			//height 165px
			height 197px
			width 270px
			absolute left -51px bottom 12px
			@media screen and (min-width:480px)
				width 277px
				left -27px
				bottom 13px
			@media screen and (min-width:992px)
				bottom -39px
				width 287px
				height 165px
				left 16px
			@media screen and (min-width:1200px)
				bottom -46px
				left 24px

		.navOption
			padding-top 25px
			display flex
			flex-direction column
			flex-wrap nowrap
			justify-content flex-start
			align-items flex-end
			@media screen and (min-width:992px)
				padding-top 20px
			a
				&.button-nav
					display block
					padding 0px
					cursor pointer
					relative top 0 left 16px
					z-index 23
					@media screen and (min-width:992px)
						left 0
					.line-nav
						background rgba(33,81,164,1)
						height 6px
						border-radius 10px
						width 35px
						margin-bottom 4px
						transition 0.5s all ease
						&:last-child
							margin-bottom 0
					&:hover
						.line-nav
							background rgba(219,64,38,1)
					@media screen and (min-width:992px)
						display none
			nav
				display none
				fixed top 0 left 0
				width 100%
				background rgba(0,0,0,0.85)
				z-index 20
				@media screen and (min-width:992px)
					relative top 0 left 0
					width auto
					background none
					display block
				&.active
					display block
				ul
					margin 120px 0 0
					padding 0
					@media screen and (min-width:992px)
						margin-top 20px
					li
						display block
						list-style none
						margin 0 auto
						text-align center
						padding 40px 0 0
						@media screen and (min-width:992px)
							display inline-block
							vertical-align top
							list-style none
							margin 0 -4px 0 0
							padding 0

						a
							padding 0 10px
							font-generator(f_breef,25px,normal,blueLight,none)
							transition 0.5s all ease
							@media screen and (min-width:992px)
								font-size 13px
							&:hover
								color yellowLight
							&.active
								color redLight
			.telephoneBox
				padding-right 10px
				display none
				@media screen and (min-width:992px)
					display flex
					flex-direction row
					flex-wrap wrap
					justify-content flex-start
					align-items flex-start
				.phoneBox
					&:last-child
						margin-left 50px
				.boxIcon
					width 30px
					height 30px
					background blueLight
					margin auto
					text-align center
					border-radius 10px 0px 10px 10px
					img
						margin-top 4px
				.descriptionBox, .boxIcon
					display inline-block
					margin-right -4px
					vertical-align top
				.descriptionBox
					padding-left 5px
					margin-top -3px
					p
						line-height .95em
						font-generator(f_breef,14px,normal,blueLight,none)
						&.textBig
							font-size 20px
		a
			&.logoBox
				z-index 5
				absolute top 12px left 19px
				@media screen and (min-width:480px)
					left 44px
					top 12px
				@media screen and (min-width:992px)
					top 19px
					left 31px
				@media screen and (min-width:1200px)
					padding-top 10px
				img
					//width 164px
					width 116px
					@media screen and (min-width:992px)
						width 214px
