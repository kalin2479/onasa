.contentBox
	&.contact
		background url('../image/bgcontact.jpg') center center no-repeat 
		background-size cover
		width 100%
		height 100%
		padding-top 110px
		padding-bottom 100px
		hgroup
			margin auto
			width 100%
			@media screen and (min-width:992px)
				width 700px
		p
			color gris2TextP
		h1
			font-generator(f_piurano,45px,normal,white, none)
			margin-bottom 14px
			@media screen and (min-width:768px)
				font-size 60px
		ul
			margin 60px 0 0
			padding 0
			display flex
			list-style none
			flex-direction column
			flex-wrap wrap
			justify-content center
			align-items flex-start
			@media screen and (min-width:768px)
				flex-direction row
				justify-content space-between
			li
				margin-bottom 30px
				&:last-child
					margin-bottom 0
				img, hgroup
					display inline-block
					margin-right -4px
					vertical-align top
				hgroup
					width auto
					text-align left
					padding-left 6px
					a
						&.phone
							font-generator(f_breef,22px,normal,#f2f2f2, none)	
					p
						font-generator(f_breef,13px,normal,#f2f2f2, none)
						&.phone
							font-size 22px
						
					h3
						font-generator(f_breef,20px,normal,gris2TextP, none)
						
					
		&:before
			content ''
			background url('../image/curva-punto.png') center center no-repeat 
			background-size cover
			height 60px
			width 100%
			absolute top -6px left 0
			z-index 2
			@media screen and (min-width:1200px)
				height 120px
		