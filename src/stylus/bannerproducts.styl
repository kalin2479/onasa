.wrapperSlider
	padding 0
	margin 50px 0 0
	height 496px
	relative top 0 left 0
	@media screen and (min-width:480px)
		height 600px
	@media screen and (min-width:768px)
		height 492px
	@media screen and (min-width:992px)
		height 518px
	.slick-dots
		bottom 0
		position relative
		li
			width 20px
			height 20px
			&.slick-active
				button
					background #2151a4
			button
				background white
				border-radius 20px
				border 2px solid #d1d1d1
				width 20px
				height 20px
				padding 0
				&:before
					content ''

	&.slick-dotted
		&.slick-slider
			margin-bottom 0
	.slick-list
		height 100%
		.slick-track
			height 100%
	.slick-prev
		left -17px
		@media screen and (min-width:992px)
			left 52px
		&:before
			content ''
			background url('../image/back.png')
			background-position center
			width 52px
			height 96px
			opacity 1
			display block
	.slick-next, .slick-prev
		z-index 3
		width 52px
		height 96px
		top 20%
		@media screen and (min-width:992px)
			top 50%
	.slick-next
		right -17px
		@media screen and (min-width:992px)
			right 52px
		&:before
			content ''
			background url('../image/next.png')
			background-position center
			width 52px
			height 96px
			opacity 1
			display block
	.slideNav
		ul
			list-style none
			margin 0
			padding 0
			li
				a
					display block
					height 96px
					width 52px
					cursor pointer
					position absolute
					top 15%
					transform translate(0,-15%)
					z-index 10
					@media screen and (min-width:992px)
						top 50%
						transform translate(0,-50%)

					&.slideNavPrev
						left -35px
						@media screen and (min-width:480px)
							left -10px
						@media screen and (min-width:992px)
							left 0
						@media screen and (min-width:1200px)
							left 10%
					&.slideNavNext
						right -35px
						@media screen and (min-width:480px)
							right -10px
						@media screen and (min-width:992px)
							right 0
						@media screen and (min-width:1200px)
							right 10%
	.bodySlider
		relative top 0 left 0
		height 100%
		width 100%
		margin auto
		overflow hidden
		@media screen and (min-width:768px)
			width 100%
		.bgSlide
			absolute top 0 left 0
			height 100%
			width 100%
			z-index 1
			&.active
				z-index 2
			figure
				img
					width 100%
					@media screen and (min-width:768px)
						width 350px
					@media screen and (min-width:992px)
						width 545px
			figure, .detailProduct
				display block
				@media screen and (min-width:768px)
					display inline-block
					vertical-align top
					margin-bottom 0
					margin-right -4px
			.detailProduct
				margin-left 0px
				padding-top 10px
				@media screen and (min-width:992px)
					padding-top 68px
					margin-left -30px
				hgroup
					width 100%
					text-align center
					@media screen and (min-width:992px)
						width 360px
						text-align left
					p
						font-generator(f_breef,16px,normal,grisTextP,none)
						@media screen and (min-width:992px)
							font-size 14px
					h2
						line-height .65em
						margin-bottom 14px
						font-generator(f_breef,45px,normal,blueText,none)
						@media screen and (min-width:992px)
							margin-bottom 8px
				.addCar
					padding-top 20px
					a
						cursor pointer
						display block
						width 90%
						text-align center
						border-radius 15px
						line-height 3em
						margin 0 auto
						border 2px solid #2051a3
						height 47px
						transition none
						background linear-gradient(to bottom, rgba(53,118,197,1) 0%, rgba(33,83,164,1) 100%)
						font-generator(f_breef,16px,normal,white,none)
						@media screen and (min-width:992px)
							width 230px
							margin 0
						&:hover
							border 2px solid #c62b26
							background linear-gradient(to bottom, rgba(219,64,38,1) 0%, rgba(198,43,38,1) 100%)
