.slider
	overflow hidden
	relative top 0 left 0
	.controls
		ul
			padding 0px
			text-align center
			position absolute
			bottom 15%
			left 50%
			transform translate(-50%, 0)
			margin 0px
			z-index 6			
			li
				list-style-type none
				background-color white
				width 20px
				height 20px
				border-radius 50%
				box-shadow 0px 0px 5px rgba(0, 0, 0, 0.4)
				margin-right 5px
				display inline-block
				cursor pointer
				box-sizing border-box
				&.active
					border 5px solid #d1d1d1
	.sliderBox
		white-space nowrap
		position relative
		transition all 0.3s
		left 0px
		height 650px
		&.*
			white-space normal
		.bannerContent
			background url('../image/bannerHome.jpg') center center no-repeat 
			background-size cover 
			height 100%
			width 100%
			display inline-block
			margin-right -4px
			vertical-align top
			relative top 0 left 0
			.descriptionBox
				absolute top 50% left 50%
				transform translate(-50%,-30%)					
				h2,h3
					text-align center
					line-height .95em
					font-generator(f_breef,60px,normal,white,none)
					text-shadow 0px 0px 2px rgba(0,0,0,0.65), 0px 0px 3px rgba(0,0,0,0.65), 0px 0px 18px rgba(0,0,0,0.65), 0px 0px 17px rgba(0,0,0,0.1)	
				h3
					font-size 30px
				a
					cursor pointer
					display block
					width 266px
					text-align center
					border-radius 15px
					line-height 2.35em
					margin 40px auto 0
					border 2px solid #2051a3
					height 37px
					transition none
					background linear-gradient(to bottom, rgba(53,118,197,1) 0%, rgba(33,83,164,1) 100%)
					font-generator(f_breef,16px,normal,white,none)
					&:hover
						border 2px solid #c62b26
						background linear-gradient(to bottom, rgba(219,64,38,1) 0%, rgba(198,43,38,1) 100%)
					
					
